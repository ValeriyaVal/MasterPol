<Page x:Class="MasterPol.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPol"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Наименование: " FontSize="20" ></TextBlock>
            <TextBox Text="{Binding NamePartner}" FontSize="20" Width="150" Height="25"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Выберите тип: " FontSize="20" ></TextBlock>
            <ComboBox x:Name="ComboType"
          Width="150" Height="30" FontSize="20"
          DisplayMemberPath="NamePartnerType"
          SelectedValuePath="IDPartnerType"
          SelectedValue="{Binding IDTypePartner, Mode=TwoWay}" />

            <!--<ComboBox Name="ComboType" Width="150" Height="30" FontSize="20" 
                      SelectedValuePath="Content"
                      SelectedValue="{Binding PartnerType, Mode=TwoWay}">
                <ComboBoxItem Content="ЗАО"/>
                <ComboBoxItem Content="ОАО"/>
                <ComboBoxItem Content="ООО"/>
                <ComboBoxItem Content="ПАО"/>
            </ComboBox>-->
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center" >
            <TextBlock Text="Рейтинг: " FontSize="20" Margin="5" ></TextBlock>
            <TextBox Text="{Binding TopPartner}" FontSize="20" Width="150"  Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3" VerticalAlignment="Center">
            <TextBlock Text="Адрес: " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding AdressePartner}" FontSize="20" Width="900" Height="25" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" VerticalAlignment="Center">
            <TextBlock Text="Фамилия директора " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding LastNamePartner}"  FontSize="20" Width="150" Height="25" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5" VerticalAlignment="Center">
            <TextBlock Text="Имя директора: " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding FirstNamePartner}"  FontSize="20" Width="150" Height="25" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6" VerticalAlignment="Center">
            <TextBlock Text="Отчество директора: " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding PatronymicPartner}"  FontSize="20" Width="150" Height="25" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="7" VerticalAlignment="Center">
            <TextBlock Text="Номер: " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding NumberPartner}"  FontSize="20" Width="150" Height="25" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="8" VerticalAlignment="Center">
            <TextBlock Text="Email: " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding EmailParnter}"  FontSize="20" Width="300" Height="25" Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="9" VerticalAlignment="Center">
            <TextBlock Text="ИНН: " FontSize="20" Margin="5"></TextBlock>
            <TextBox Text="{Binding INNPartner}" FontSize="20" Width="150" Height="25" Margin="5"></TextBox>
        </StackPanel>
        
        
        <Button Name="SaveBtn" Content="Сохранить" Grid.Row="10" Click="SaveBtn_Click"></Button>

    </Grid>
</Page>
