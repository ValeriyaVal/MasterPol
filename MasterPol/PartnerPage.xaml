<Page x:Class="MasterPol.PartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPol"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnerPage" FontFamily="Segoe UI" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>

        <ListView Name="PartnerListView" Grid.Row="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" >
                            <TextBlock Text="{Binding PartnerType.NamePartnerType}" FontSize="20"></TextBlock>
                            <TextBlock Text=" | " FontSize="20"></TextBlock>
                            <TextBlock Text="{Binding NamePartner}"  FontSize="20"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" >
                            <TextBlock Text="{Binding LastNamePartner}" FontSize="16" Margin="5"></TextBlock>
                            <TextBlock Text="{Binding FirstNamePartner}" FontSize="16" Margin="5"></TextBlock>
                            <TextBlock Text="{Binding LastNamePartner}" FontSize="16" Margin="5"></TextBlock>
                        </StackPanel>
                        <TextBlock Text="{Binding NumberPartner}" FontSize="16" Margin="5" Grid.Row="2"></TextBlock>
                        <TextBlock Text="{Binding TopPartner, StringFormat=Рейтинг: {0}}" FontSize="16" Margin="5" Grid.Row="3"></TextBlock>
                        <TextBlock Text=""></TextBlock>

                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.RowSpan="4" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Discount, StringFormat={}{0} %}" FontSize="25"/>
                        </StackPanel>

                        <Button Name="EditBtn" Grid.Row="3" Content="Редактировать" Click="EditBtn_Click" HorizontalAlignment="Right" ></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="AddBtn" Grid.Row="1" Grid.Column="1" Content="Добавить"
                Click="AddBtn_Click"></Button>
    </Grid>
</Page>
